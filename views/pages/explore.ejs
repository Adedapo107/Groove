<% 
  // categories
  const {
    items: categoryItems
  } = locals.categories;
%>

<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../layouts/head', {title : 'Explore | Groove'}) %>

    <link rel="stylesheet" href="/css/explore.css">
  </head>
  <body>
    <!-- Recently Played -->
    <%- include('../layouts/recent_played', {recentlyPlayed:
    locals.recentlyPlayedTracks}) %>

    <article class="page custom-scrollbar" data-page>
      <!-- Top App Bar -->
      <%- include('../partials/top_bar', locals.currentProfile) %>

      <!-- Bottom Navigation -->
      <%- include('../partials/bottom_nav', { currentRoute: '/explore' }) %>

      <div class="main">
        <section class="section">
            <div class="title-wrapper">
                <h2 class="title-large section-title">Explore</h2>
            </div>

            <div class="grid-list">

                <% categoryItems.forEach(({ icons, id, name }) => { %>
                    <% const { url, height, width} = icons[0] %>

                    <%- include('../partials/category_card', {
                        url,
                        height,
                        width,
                        name,
                        id
                    }) %>
                <% }) %>
            </div>

            <!-- # Pagination -->
            <%- include('../partials/pagination', locals.categories) %>
        </section>
      </div>

      <!-- Footer -->
      <%- include('../layouts/footer') %>

      <!-- Player sm -->
      <%- include('../partials/player_sm') %>

      <!-- Player lg -->
      <%- include('../partials/player_lg') %>
    </article>
  </body>
</html>
